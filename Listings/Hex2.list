762B             8 19 Timer_Interrupt:
762B F5          8 20 push    af                          ; store AF register
762C D9          8 21 exx                                 ; store BC, DE and HL registers
762D 3A E8 62    8 23 ld      a, (TIMER_FLAG)             ; check timer flag
7630 B7          8 24 or      a                           ; is timer stopped?
7631 CA 5A 76    8 25 jp      z, Timer_Exit               ; yes, exit routine
7634 21 EC 62    8 27 ld      hl, RED_TIMER               ; HL points to red's interrupt counter address
7637 3D          8 28 dec     a                           ; is red timer on?
7638 C2 3E 76    8 29 jp      nz, Timer_Counters          ; yes, check interrupt counter 
763B 21 E9 62    8 30 ld      hl, CYAN_TIMER              ; HL points to cyan's interrupt counter address
763E             8 31 Timer_Counters
763E 35          8 32 dec     (hl)                        ; decrement interrupt counter
763F C2 5A 76    8 33 jp      nz, Timer_Exit              ; if not 0, exit routine
7642 36 32       8 35 ld      (hl), 50                    ; restart interrupt counter
7644 23          8 36 inc     hl                          ; move HL to seconds counter address
7645 3E 01       8 37 ld      a, 1                        ; increment seconds counter
7647 86          8 38 add     a, (hl)
7648 27          8 39 daa                                 ; convert to BCD (Binary-Coded-Decimal)
7649 77          8 40 ld      (hl), a                     ; store seconds
764A FE 60       8 41 cp      $60                         ; 60 seconds reached?
764C C2 57 76    8 42 jp      nz, Timer_Show              ; no, show timer
764F 36 00       8 43 ld      (hl), 0                     ; restart seconds counter
7651 23          8 44 inc     hl                          ; move HL to minutes counter address
7652 3E 01       8 45 ld      a, 1                        ; increment minutes counter
7654 86          8 46 add     a, (hl)
7655 27          8 47 daa                                 ; convert to BCD (Binary-Coded-Decimal)
7656 77          8 48 ld      (hl), a                     ; store minutes
