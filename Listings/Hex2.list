76D5             9 17 Sound_FX:
76D5 F3          9 18 di                                  ; disable interrupts
76D6 DD 4E 00    9 20 ld      c, (ix+0)                   ; BC = frames
76D9 DD 46 01    9 21 ld      b, (ix+1)
76DC DD 5E 02    9 22 ld      e, (ix+2)                   ; DE = frame length
76DF DD 56 03    9 23 ld      d, (ix+3)
76E2 D5          9 24 push    de                          ; store frame length in IY
76E3 FD E1       9 25 pop     iy
76E5 DD 5E 04    9 26 ld      e, (ix+4)                   ; DE = pitch
76E8 DD 56 05    9 27 ld      d, (ix+5)
76EB 21 00 00    9 28 ld      hl, 0                       ; reset HL
76EE             9 30 Sound_FX_Frames
76EE C5          9 31 push    bc                          ; store frames
76EF FD E5       9 32 push    iy                          ; restore frame length in BC
76F1 C1          9 33 pop     bc
76F2             9 34 Sound_FX_FrameLength
76F2 19          9 35 add     hl, de                      ; HL = incremented pitch
76F3 7C          9 36 ld      a, h                        ; compares with fixed duty cycle ($80 for 50% square wave)
76F4 FE 80       9 37 cp      $80                         ; if (incremented pitch < duty cycle)
76F6 9F          9 38 sbc     a, a                        ;    { A = %11111111 } else { A = %00000000 }
76F7 E6 10       9 39 and     %00010000                   ; toggling bit 4 controls the internal speaker
76F9 F6 00       9 40 or      0                           ; keep border unchanged, dummy (7t)
76FB D3 FE       9 41 out     ($FE), a                    ; send bit to internal speaker
76FD 3A 00 00    9 42 ld      a, (0)                      ; dummy (13t)
7700 0B          9 43 dec     bc                          ; decrement frame length
7701 78          9 44 ld      a, b                        ; check frame length
7702 B1          9 45 or      c                           ; frame length = 0?
7703 C2 F2 76    9 46 jp      nz, Sound_FX_FrameLength    ; no, repeat "frame length" times (loop = 88t)
7706 DD 4E 06    9 48 ld      c, (ix+6)                   ; BC = pitch slide
7709 DD 46 07    9 49 ld      b, (ix+7)
770C EB          9 50 ex      de, hl                      ; HL = current pitch
770D 09          9 51 add     hl, bc                      ; increment pitch with pitch slide
770E EB          9 52 ex      de, hl                      ; DE = new pitch
770F C1          9 54 pop     bc                          ; restore frames
7710 0B          9 55 dec     bc                          ; decrement frames
7711 78          9 56 ld      a, b                        ; check frames
7712 B1          9 57 or      c                           ; frames = 0?
7713 20 D9       9 58 jr      nz, Sound_FX_Frames         ; no, repeat "frames" times
7715 FB          9 60 ei                                  ; enable interrupts
