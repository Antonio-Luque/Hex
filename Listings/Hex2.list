726F D4 23 71    7 421 call    nc, PathFinder_Update
7272 E1          7 422 pop     hl                          ; retreive queue head address
7273 3A 2E 71    7 423 ld      a, (@Queue_Tail+1)          ; get queue tail address (low-byte)
7276 BD          7 424 cp      l                           ; is queue empty?
