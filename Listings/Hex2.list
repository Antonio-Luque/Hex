723C             7 363 ; Path_Finder: calculate two-distance metric for each board position
723C             7 364 ;
723C             7 365 ; The algorithm is implemented running PATHFINDER, starting at the corresponding side of the input board
723C             7 366 ;
723C             7 367 ; Input:    HL  = cyan or red queue area address
723C             7 368 ;           IYH = distance to check edge positions
723C             7 369 ;           IYL = 0
723C             7 370 ;
723C             7 371 ; Output:   A   = -1, if corresponding edge couldn't be reached
723C             7 372 ;           A   =  0, if there is chain of connected (color) tokens between the two edges
723C             7 373 ;           A   = last edge position visited (-1), otherwise
723C             7 374 ;           HL  = cyan or red queue head address
723C             7 375 ;
723C             7 376 ; Uses:     @Queue_Tail (queue pointer in 'PathFinder_Update' routine)
723C             7 377 ;
723C             7 378 ; Destroys: BC, DE, IY
723C             7 379 ; ----------------------------------------------------------------------------------------------------------------------
723C             7 380 Path_Finder:
723C 2C          7 381 inc     l                           ; move queue head down
723D E5          7 382 push    hl                          ; preserve queue head address
723E 6E          7 383 ld      l, (hl)                     ; retrieve next position to be checked
723F 24          7 384 inc     h                           ; move HL to corresponding board address
7240 4E          7 385 ld      c, (hl)                     ; retrieve distance from this position to start
7241 5D          7 386 ld      e, l                        ; store current position
7242             7 388 ; look for adjacent positions
7242 7D          7 390 ld      a, l                        ; get current position
7243 FD 84       7 391 add     a, iyh                      ; add distance to check edge positions
7245 6F          7 392 ld      l, a                        ; move HL to calculated position address
7246 CB 7E       7 393 bit     7, (hl)                     ; is it an edge?
7248 20 34       7 394 jr      nz, Path_Finder_Adjacent    ; yes, process adjacent positions
724A 3E 02       7 396 ld      a, FRIEND                   ; set distance to compare with
724C             7 397 ; return point from PathFinder_Adjacent
724C             7 398 Path_Finder_Neighbors
724C 6B          7 399 ld      l, e                        ; restore current position to be checked
724D 2C          7 400 inc     l                           ; move HL to right neighbor address
724E BE          7 401 cp      (hl)                        ; check right neighbor distance
724F D4 23 71    7 402 call    nc, PathFinder_Update       ; if FRIEND >= distance, update distance
7252 2D          7 403 dec     l                           ; move HL to left neighbor address
7253 2D          7 404 dec     l
7254 BE          7 405 cp      (hl)                        ; check left neighbor distance
7255 D4 23 71    7 406 call    nc, PathFinder_Update       ; (repeat for each neighbor)
7258 11 F8 FF    7 407 ld      de, -WIDTH
725B 19          7 408 add     hl, de
725C BE          7 409 cp      (hl)                        ; check upper-left neighbor distance
725D D4 23 71    7 410 call    nc, PathFinder_Update
7260 2C          7 411 inc     l
7261 BE          7 412 cp      (hl)                        ; check upper-right neighbor distance
7262 D4 23 71    7 413 call    nc, PathFinder_Update
7265 11 10 00    7 414 ld      de, WIDTH*2
7268 19          7 415 add     hl, de
7269 BE          7 416 cp      (hl)                        ; check lower-left neighbor distance
726A D4 23 71    7 417 call    nc, PathFinder_Update
726D 2C          7 418 inc     l
