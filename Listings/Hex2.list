728E 3E 02       7 462 ld      a, FRIEND                   ; set distance to compare with
7290 E9          7 463 jp      (hl)                        ; jump to 'PathFinder_[COLOR]_Edge_[n]' routine
7291             7 464 Path_Finder_Abort
7291 E1          7 465 pop     hl                          ; restore queue head address
7292 AF          7 466 xor     a                           ; return A = 0
7293 C9          7 467 ret
